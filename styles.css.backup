/* ========================================
   SigmaTrade v4.0.0 - UX Refactored Styles
   Best Practices: Visual Hierarchy, Whitespace, Scannability
   ======================================== */

/* ========== RESET & BASE ========== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* ========== UTILITY CLASSES ========== */
.hidden {
    display: none !important;
}

/* ========== CSS CUSTOM PROPERTIES ========== */
:root {
    /* === Dark Theme Colors === */
    --bg-primary: #0a0a0a;
    --bg-secondary: #141414;
    --bg-tertiary: #1a1a1a;
    --bg-elevated: #1f1f1f;
    --bg-card: #252525;
    
    /* === Accent Colors === */
    --accent-primary: #00d4ff;
    --accent-secondary: #7c3aed;
    --accent-success: #10b981;
    --accent-warning: #f59e0b;
    --accent-danger: #ef4444;
    
    /* === Text Colors === */
    --text-primary: #ffffff;
    --text-secondary: #a0a0a0;
    --text-tertiary: #707070;
    
    /* === Border Colors === */
    --border-primary: #2a2a2a;
    --border-secondary: #383838;
    --border-accent: rgba(0, 212, 255, 0.3);
    
    /* === Shadows === */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.5);
    --shadow-xl: 0 20px 40px rgba(0, 0, 0, 0.6);
    --shadow-glow: 0 0 20px rgba(0, 212, 255, 0.2);
    
    /* === Spacing Scale (UX Best Practice) === */
    --spacing-xs: 8px;
    --spacing-sm: 16px;
    --spacing-md: 24px;
    --spacing-lg: 32px;
    --spacing-xl: 48px;
    --spacing-2xl: 64px;
    --spacing-3xl: 80px;
    --spacing-4xl: 96px;
    
    /* === Typography Scale (Visual Hierarchy) === */
    --font-xs: 12px;
    --font-sm: 14px;
    --font-base: 16px;
    --font-lg: 18px;
    --font-xl: 20px;
    --font-2xl: 24px;
    --font-3xl: 32px;
    --font-4xl: 48px;
    --font-5xl: 64px;
    
    /* === Line Heights === */
    --leading-tight: 1.25;
    --leading-normal: 1.5;
    --leading-relaxed: 1.75;
    --leading-loose: 2;
    
    /* === Border Radius === */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 20px;
    --radius-full: 9999px;
    
    /* === Transitions === */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
    
    /* === Z-Index Layers === */
    --z-base: 0;
    --z-elevated: 10;
    --z-sticky: 50;
    --z-modal: 100;
    --z-popover: 200;
    --z-tooltip: 300;
}

/* ========== BODY & FOUNDATION ========== */
body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: var(--leading-relaxed);
    font-size: var(--font-base);
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Animated Background with better performance */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 50%, rgba(124, 58, 237, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(0, 212, 255, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 40% 20%, rgba(16, 185, 129, 0.05) 0%, transparent 50%);
    pointer-events: none;
    z-index: -1;
    animation: backgroundShift 20s ease infinite;
    will-change: opacity;
}

@keyframes backgroundShift {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
}

/* ========== CONTAINER WITH BREATHING ROOM ========== */
.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
}

/* ========== HEADER - STICKY NAVIGATION ========== */
.header {
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-primary);
    padding: 0;
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    backdrop-filter: blur(10px);
    background: rgba(20, 20, 20, 0.95);
    box-shadow: var(--shadow-md);
}

.header .container {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) 0;
    min-height: 80px;
}

/* ========== LOGO WITH EMPHASIS ========== */
.logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.logo-icon {
    font-size: 36px;
    font-weight: 800;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: logoGlow 3s ease-in-out infinite;
    line-height: 1;
}

@keyframes logoGlow {
    0%, 100% { filter: drop-shadow(0 0 8px rgba(0, 212, 255, 0.5)); }
    50% { filter: drop-shadow(0 0 16px rgba(124, 58, 237, 0.6)); }
}

.logo-text {
    font-size: 28px;
    font-weight: 800;
    letter-spacing: -0.5px;
    line-height: 1;
}

.logo-accent {
    color: var(--accent-primary);
}

/* ========== HEADER INFO - IMPROVED SPACING ========== */
.header-info {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
}

.network-status,
.wallet-short {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
    transition: all var(--transition-base);
}

.network-status:hover,
.wallet-short:hover {
    border-color: var(--border-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
}

.status-dot {
    width: 10px;
    height: 10px;
    border-radius: var(--radius-full);
    background: var(--accent-success);
    animation: pulse 2s infinite;
    flex-shrink: 0;
}

@keyframes pulse {
    0%, 100% { 
        opacity: 1; 
        box-shadow: 0 0 8px var(--accent-success); 
    }
    50% { 
        opacity: 0.6; 
        box-shadow: 0 0 16px var(--accent-success); 
    }
}

.status-dot.disconnected {
    background: var(--accent-danger);
    animation: none;
}

.wallet-label {
    color: var(--text-secondary);
    font-size: var(--font-sm);
    font-weight: 500;
}

.wallet-address {
    font-family: 'Courier New', 'Monaco', monospace;
    color: var(--accent-primary);
    font-weight: 600;
    font-size: var(--font-sm);
}

/* Header Contact with Email */
.header-contact {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
}

.header-contact::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
    transition: left 0.5s ease;
}

.header-contact:hover::before {
    left: 100%;
}

.header-contact:hover {
    border-color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(99, 102, 241, 0.3);
}

.email-icon {
    width: 20px;
    height: 20px;
    color: var(--accent-primary);
    flex-shrink: 0;
    animation: emailBounce 2s infinite;
}

@keyframes emailBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
}

.header-email {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--text-primary);
    font-size: var(--font-sm);
    font-weight: 500;
    position: relative;
}

.email-text {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 600;
    letter-spacing: 0.3px;
    animation: gradientShift 3s ease infinite;
    background-size: 200% 200%;
}

@keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.copy-email-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: var(--spacing-xs);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    color: var(--text-secondary);
}

.copy-email-btn svg {
    width: 16px;
    height: 16px;
}

.copy-email-btn:hover {
    background: var(--bg-primary);
    color: var(--accent-primary);
    transform: scale(1.1);
}

.copy-email-btn:active {
    transform: scale(0.95);
}

.copy-email-btn.copied {
    color: var(--accent-success);
    animation: copySuccess 0.5s ease;
}

@keyframes copySuccess {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
}

/* ========== LOGIN BUTTON ========== */
.login-btn {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: 12px 24px;
    background: linear-gradient(135deg, #00d4ff 0%, #0099ff 50%, #00d4ff 100%);
    background-size: 200% 200%;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 50px;
    font-size: 15px;
    font-weight: 700;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3),
                0 0 20px rgba(0, 212, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
    animation: gradientShift 3s ease infinite, gentlePulse 2s ease-in-out infinite;
    border: 2px solid rgba(0, 212, 255, 0.3);
    text-transform: uppercase;
    letter-spacing: 1px;
}

@keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@keyframes gentlePulse {
    0%, 100% {
        box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3),
                    0 0 20px rgba(0, 212, 255, 0.2),
                    inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
    50% {
        box-shadow: 0 4px 20px rgba(0, 212, 255, 0.5),
                    0 0 30px rgba(0, 212, 255, 0.3),
                    inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
}

.login-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.6s ease;
}

.login-btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
}

.login-btn:hover::before {
    left: 100%;
}

.login-btn:hover::after {
    width: 300px;
    height: 300px;
}

.login-btn:hover {
    box-shadow: 0 6px 30px rgba(0, 212, 255, 0.6),
                0 0 50px rgba(0, 212, 255, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transform: translateY(-3px) scale(1.05);
    border-color: rgba(0, 212, 255, 0.6);
    animation-play-state: paused;
}

.login-btn:active {
    transform: translateY(-1px) scale(1.02);
    box-shadow: 0 2px 10px rgba(0, 212, 255, 0.4),
                0 0 20px rgba(0, 212, 255, 0.3);
}

.login-icon {
    width: 22px;
    height: 22px;
    stroke: currentColor;
    filter: drop-shadow(0 0 2px rgba(255, 255, 255, 0.5));
    transition: transform 0.3s ease;
    z-index: 1;
}

.login-btn:hover .login-icon {
    transform: translateX(3px) rotate(5deg);
    filter: drop-shadow(0 0 4px rgba(255, 255, 255, 0.8));
}

.login-text {
    white-space: nowrap;
    z-index: 1;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* ========== MOBILE MENU TOGGLE ========== */
.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
}

.mobile-menu-toggle:hover {
    background: var(--bg-elevated);
}

.mobile-menu-toggle span {
    width: 28px;
    height: 3px;
    background: var(--text-primary);
    border-radius: 2px;
    transition: all var(--transition-base);
}

.mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(9px, 9px);
}

.mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
}

.mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
}

/* ========== NAVIGATION TABS - IMPROVED TOUCH TARGETS ========== */
.main-nav {
    display: flex;
    gap: 0;
    background: var(--bg-tertiary);
    border-top: 1px solid var(--border-primary);
}

.nav-tab {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-lg) var(--spacing-lg);
    min-height: 64px; /* Touch-friendly */
    background: none;
    border: none;
    border-bottom: 3px solid transparent;
    color: var(--text-secondary);
    font-size: var(--font-lg);
    font-weight: 700;
    cursor: pointer;
    transition: all var(--transition-base);
    position: relative;
}

.nav-tab::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    opacity: 0;
    transition: opacity var(--transition-base);
}

.nav-tab:hover {
    color: var(--text-primary);
    background: var(--bg-elevated);
}

.nav-tab.active {
    color: var(--text-primary);
    background: var(--bg-elevated);
}

.nav-tab.active::before {
    opacity: 1;
}

.nav-icon {
    font-size: 24px;
    line-height: 1;
}

.nav-label {
    font-size: var(--font-base);
    font-weight: 600;
}

/* ========== MAIN CONTENT - GENEROUS SPACING ========== */
.main-content {
    padding: var(--spacing-3xl) 0;
    min-height: calc(100vh - 200px);
}

/* ========== PAGES WITH SMOOTH TRANSITIONS ========== */
.page {
    display: none;
    animation: fadeInUp var(--transition-base);
}

.page.active {
    display: block;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ========== HERO SECTION - VISUAL HIERARCHY ========== */
.hero-section {
    text-align: center;
    padding: var(--spacing-3xl) var(--spacing-xl);
    margin-bottom: var(--spacing-3xl);
    background: linear-gradient(135deg, 
        rgba(0, 212, 255, 0.05) 0%, 
        rgba(124, 58, 237, 0.05) 100%);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-secondary);
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.1) 0%, transparent 70%);
    animation: heroGlow 10s ease-in-out infinite;
    will-change: transform;
}

@keyframes heroGlow {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(10%, 10%); }
}

.hero-title {
    font-size: var(--font-5xl); /* 64px - Strong visual hierarchy */
    font-weight: 900;
    margin-bottom: var(--spacing-lg);
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    z-index: 1;
    letter-spacing: -2px;
    line-height: var(--leading-tight);
}

.hero-subtitle {
    font-size: var(--font-2xl); /* 24px - Clear hierarchy */
    color: var(--text-secondary);
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
    font-weight: 400;
}

/* ========== SECTION TITLES - CONSISTENT HIERARCHY ========== */
.section-title {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    font-size: var(--font-3xl); /* 32px */
    font-weight: 800;
    margin-bottom: var(--spacing-xl);
    color: var(--text-primary);
    line-height: var(--leading-tight);
}

.section-title .icon {
    font-size: 36px;
    line-height: 1;
}

/* ========== INFO CARDS - BREATHING ROOM ========== */
.info-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-3xl);
}

.info-card {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-2xl) var(--spacing-xl);
    text-align: center;
    transition: all var(--transition-slow);
    position: relative;
    overflow: hidden;
}

.info-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    opacity: 0;
    transition: opacity var(--transition-base);
}

.info-card:hover {
    transform: translateY(-8px);
    border-color: var(--border-accent);
    box-shadow: var(--shadow-glow);
}

.info-card:hover::before {
    opacity: 1;
}

.info-icon {
    font-size: 64px;
    margin-bottom: var(--spacing-lg);
    display: inline-block;
    filter: drop-shadow(0 0 20px rgba(0, 212, 255, 0.3));
    line-height: 1;
}

.info-card h3 {
    font-size: var(--font-2xl);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
    line-height: var(--leading-tight);
}

.info-card p {
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    font-size: var(--font-base);
}

/* ========== BOTS FAMILY SECTION ========== */
.bots-family-section {
    margin-bottom: var(--spacing-3xl);
}

.bots-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-xl);
}

.bot-card {
    background: var(--bg-card);
    border: 2px solid var(--border-secondary);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    transition: all var(--transition-slow);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.bot-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    opacity: 0;
    transition: opacity var(--transition-base);
}

.bot-card.exchange-bot::before {
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
}

.bot-card.mev-bot::before {
    background: linear-gradient(90deg, #f59e0b, #d97706);
}

.bot-card.arb-bot::before {
    background: linear-gradient(90deg, #10b981, #059669);
}

.bot-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: var(--shadow-xl);
}

.bot-card:hover::before {
    opacity: 1;
}

.bot-card.exchange-bot:hover {
    border-color: rgba(0, 212, 255, 0.6);
    box-shadow: 0 20px 50px rgba(0, 212, 255, 0.3);
}

.bot-card.mev-bot:hover {
    border-color: rgba(245, 158, 11, 0.6);
    box-shadow: 0 20px 50px rgba(245, 158, 11, 0.3);
}

.bot-card.arb-bot:hover {
    border-color: rgba(16, 185, 129, 0.6);
    box-shadow: 0 20px 50px rgba(16, 185, 129, 0.3);
}

.bot-icon {
    font-size: 72px;
    margin-bottom: var(--spacing-lg);
    display: inline-block;
    line-height: 1;
    filter: drop-shadow(0 0 20px rgba(0, 212, 255, 0.4));
}

.bot-card.mev-bot .bot-icon {
    filter: drop-shadow(0 0 20px rgba(245, 158, 11, 0.4));
}

.bot-card.arb-bot .bot-icon {
    filter: drop-shadow(0 0 20px rgba(16, 185, 129, 0.4));
}

.bot-name {
    font-size: var(--font-2xl);
    font-weight: 800;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
    line-height: var(--leading-tight);
}

.bot-description {
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    font-size: var(--font-base);
    margin-bottom: var(--spacing-xl);
    flex-grow: 1;
}

.bot-stats {
    margin-bottom: var(--spacing-lg);
}

.bot-stat {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-elevated);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
}

.bot-stat .stat-label {
    color: var(--text-secondary);
    font-size: var(--font-sm);
    font-weight: 600;
}

.bot-stat .stat-value {
    font-size: var(--font-sm);
    font-weight: 700;
}

.active-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--accent-success);
    background: rgba(16, 185, 129, 0.15);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
}

.active-badge::before {
    content: '‚óè';
    font-size: 12px;
    animation: pulse 2s infinite;
}

.development-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--accent-warning);
    background: rgba(245, 158, 11, 0.15);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
}

.bot-btn {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    border: none;
    color: #ffffff;
    padding: var(--spacing-md) var(--spacing-xl);
    border-radius: var(--radius-md);
    font-size: var(--font-base);
    font-weight: 700;
    cursor: pointer;
    transition: all var(--transition-base);
    text-align: center;
    position: relative;
    overflow: hidden;
    min-height: 48px;
}

.bot-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left var(--transition-slow);
}

.bot-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 212, 255, 0.4);
}

.bot-btn:hover::before {
    left: 100%;
}

.bot-btn:active {
    transform: translateY(0);
}

.bot-card.mev-bot .bot-btn {
    background: linear-gradient(135deg, #f59e0b, #d97706);
}

.bot-card.mev-bot .bot-btn:hover {
    box-shadow: 0 8px 24px rgba(245, 158, 11, 0.4);
}

.bot-card.arb-bot .bot-btn {
    background: linear-gradient(135deg, #10b981, #059669);
}

.bot-card.arb-bot .bot-btn:hover {
    box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
}

/* ========== PAGE-SPECIFIC ACCENTS ========== */
.mev-accent .stat-value {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.mev-accent:hover {
    border-color: rgba(245, 158, 11, 0.5);
    box-shadow: 0 0 20px rgba(245, 158, 11, 0.2);
}

.arb-accent .stat-value {
    background: linear-gradient(135deg, #10b981, #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.arb-accent:hover {
    border-color: rgba(16, 185, 129, 0.5);
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.2);
}

.text-secondary {
    color: var(--text-secondary);
    font-size: var(--font-sm);
    margin-top: var(--spacing-sm);
}

/* ========== BALANCES SECTION ========== */
.balances-section {
    margin-bottom: var(--spacing-3xl);
}

.balances-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: var(--spacing-lg);
}

.balance-card {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
}

.balance-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    opacity: 0;
    transition: opacity var(--transition-base);
}

.balance-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-accent);
    box-shadow: var(--shadow-md);
}

.balance-card:hover::before {
    opacity: 1;
}

.balance-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.balance-icon {
    font-size: 36px;
    line-height: 1;
}

.balance-token {
    font-size: var(--font-lg);
    font-weight: 700;
    color: var(--text-primary);
}

.balance-amount {
    font-size: var(--font-3xl);
    font-weight: 800;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-xs);
    line-height: var(--leading-tight);
}

.balance-usd {
    color: var(--text-secondary);
    font-size: var(--font-sm);
}

/* ========== STATS BAR - SCANNABILITY ========== */
.stats-bar {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
}

.stat-card {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    transition: all var(--transition-base);
}

.stat-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-accent);
    box-shadow: var(--shadow-glow);
}

.stat-label {
    color: var(--text-secondary);
    font-size: var(--font-sm);
    margin-bottom: var(--spacing-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.stat-value {
    font-size: var(--font-4xl); /* 48px - Strong emphasis */
    font-weight: 900;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: var(--leading-tight);
}

/* ========== TRANSACTION WINDOW ========== */
.transaction-window {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
}

.window-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xl) var(--spacing-lg);
    background: var(--bg-elevated);
    border-bottom: 1px solid var(--border-primary);
    min-height: 80px;
}

.window-header h2 {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    font-size: var(--font-2xl);
    font-weight: 700;
    line-height: var(--leading-tight);
}

.window-controls {
    display: flex;
    gap: var(--spacing-sm);
}

.btn-control {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
    padding: var(--spacing-sm) var(--spacing-md);
    min-width: 44px; /* Touch-friendly */
    min-height: 44px;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-control:hover {
    background: var(--bg-secondary);
    border-color: var(--accent-primary);
    transform: scale(1.05);
}

.btn-control:active {
    transform: scale(0.95);
}

/* ========== FILTERS - PROGRESSIVE DISCLOSURE ========== */
.filters {
    padding: var(--spacing-lg) var(--spacing-xl);
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border-primary);
    display: flex;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    flex: 1;
    min-width: 200px;
}

.filter-group label {
    color: var(--text-secondary);
    font-size: var(--font-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.filter-group select {
    background: var(--bg-elevated);
    border: 1px solid var(--border-secondary);
    color: var(--text-primary);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
    font-size: var(--font-base);
    min-height: 44px; /* Touch-friendly */
}

.filter-group select:hover {
    border-color: var(--accent-primary);
}

.filter-group select:focus {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
}

/* ========== TRANSACTION LIST ========== */
.transaction-list {
    max-height: 600px;
    overflow-y: auto;
    padding: var(--spacing-xl);
}

/* Custom Scrollbar - Better UX */
.transaction-list::-webkit-scrollbar {
    width: 10px;
}

.transaction-list::-webkit-scrollbar-track {
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
}

.transaction-list::-webkit-scrollbar-thumb {
    background: var(--accent-primary);
    border-radius: var(--radius-sm);
}

.transaction-list::-webkit-scrollbar-thumb:hover {
    background: var(--accent-secondary);
}

/* ========== LOADING STATE ========== */
.loading-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4xl) var(--spacing-xl);
    color: var(--text-secondary);
    gap: var(--spacing-lg);
}

.spinner {
    width: 56px;
    height: 56px;
    border: 4px solid var(--bg-tertiary);
    border-top-color: var(--accent-primary);
    border-radius: var(--radius-full);
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* ========== TRANSACTION ITEM - IMPROVED SCANNABILITY ========== */
.tx-item {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
    transition: all var(--transition-base);
    cursor: pointer;
}

.tx-item:hover {
    border-color: var(--border-accent);
    transform: translateX(8px);
    box-shadow: var(--shadow-md);
}

.tx-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    gap: var(--spacing-md);
}

.tx-type {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-sm);
    font-size: var(--font-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.tx-type.in {
    background: rgba(16, 185, 129, 0.2);
    color: var(--accent-success);
}

.tx-type.out {
    background: rgba(239, 68, 68, 0.2);
    color: var(--accent-danger);
}

.tx-hash-container {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.tx-hash {
    font-family: 'Courier New', 'Monaco', monospace;
    color: var(--accent-primary);
    font-size: var(--font-sm);
    font-weight: 600;
}

.copy-btn {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    color: var(--text-secondary);
    padding: 6px 8px;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 32px;
    min-height: 32px;
}

.copy-btn:hover {
    background: var(--bg-elevated);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: scale(1.1);
}

.copy-btn:active {
    transform: scale(0.95);
}

.copy-btn svg {
    width: 16px;
    height: 16px;
    pointer-events: none;
}

.tx-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
}

.tx-detail {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.tx-detail-label {
    color: var(--text-tertiary);
    font-size: var(--font-xs);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
}

.tx-detail-value {
    color: var(--text-primary);
    font-size: var(--font-base);
    font-weight: 600;
}

/* ========== FOOTER ========== */
.footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-primary);
    padding: var(--spacing-2xl) 0;
    margin-top: var(--spacing-4xl);
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr auto;
    gap: var(--spacing-2xl);
    align-items: start;
}

.footer-about {
    max-width: 600px;
}

.footer-slogan {
    color: var(--text-primary);
    font-size: var(--font-base);
    font-weight: 600;
    margin: 0 0 var(--spacing-md) 0;
}

.footer-message {
    color: var(--text-secondary);
    font-size: var(--font-sm);
    line-height: 1.6;
    margin: 0;
    font-style: italic;
}

.footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.footer-contact-title {
    color: var(--text-primary);
    font-size: var(--font-base);
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
}

.footer-email-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.footer-email {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
}

.footer-email::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
    transition: left 0.6s ease;
}

.footer-email:hover::before {
    left: 100%;
}

.footer-email:hover {
    border-color: var(--accent-primary);
    box-shadow: 0 0 25px rgba(99, 102, 241, 0.4);
    transform: translateX(5px);
}

.email-link {
    text-decoration: none;
    flex: 1;
}

.email-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    font-size: var(--font-base);
    letter-spacing: 0.5px;
    animation: gradientShift 3s ease infinite;
    background-size: 200% 200%;
    display: inline-block;
}

.footer-copy {
    flex-shrink: 0;
}

.label-icon {
    width: 14px;
    height: 14px;
    margin-right: var(--spacing-xs);
    vertical-align: middle;
}

.footer-social {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.social-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.social-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 500;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
}

.social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
    transition: left 0.5s ease;
}

.social-link:hover::before {
    left: 100%;
}

.social-link svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
}

.social-link.telegram:hover {
    border-color: #0088cc;
    box-shadow: 0 0 20px rgba(0, 136, 204, 0.4);
    transform: translateX(5px);
}

.social-link.telegram:hover svg {
    color: #0088cc;
}

.social-link.twitter:hover {
    border-color: #1da1f2;
    box-shadow: 0 0 20px rgba(29, 161, 242, 0.4);
    transform: translateX(5px);
}

.social-link.twitter:hover svg {
    color: #1da1f2;
}

.footer-label {
    color: var(--text-tertiary);
    font-size: var(--font-xs);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
    display: block;
    margin-bottom: var(--spacing-xs);
}

.footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.footer-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
    font-size: var(--font-sm);
    font-weight: 500;
}

.footer-link:hover {
    color: var(--accent-primary);
}

.footer-version {
    color: var(--text-tertiary);
    font-size: var(--font-sm);
    font-family: 'Courier New', 'Monaco', monospace;
    font-weight: 600;
    justify-self: end;
}

/* Mobile responsive */
@media (max-width: 768px) {
    .footer-content {
        grid-template-columns: 1fr;
        gap: var(--spacing-xl);
    }

    .footer-version {
        justify-self: start;
    }

    .footer-about {
        max-width: 100%;
    }
}

/* ========== INFINITE SCROLL ========== */
.scroll-loader {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--spacing-lg);
    color: var(--text-secondary);
    gap: var(--spacing-md);
}

.scroll-loader .spinner {
    width: 40px;
    height: 40px;
}

.end-of-list {
    text-align: center;
    padding: var(--spacing-lg);
    color: var(--text-tertiary);
    font-size: var(--font-sm);
    font-weight: 500;
}

/* ========== TOAST NOTIFICATIONS ========== */
.toast-container {
    position: fixed;
    top: var(--spacing-lg);
    right: var(--spacing-lg);
    z-index: var(--z-popover);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    pointer-events: none;
}

.toast {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-lg);
    background: var(--bg-elevated);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-xl);
    min-width: 320px;
    max-width: 420px;
    opacity: 0;
    transform: translateX(400px);
    transition: all var(--transition-slow);
    pointer-events: auto;
}

.toast-show {
    opacity: 1;
    transform: translateX(0);
}

.toast-icon {
    font-size: var(--font-2xl);
    flex-shrink: 0;
    line-height: 1;
}

.toast-message {
    color: var(--text-primary);
    font-size: var(--font-base);
    line-height: var(--leading-relaxed);
    flex: 1;
}

/* Toast Types */
.toast-success {
    border-left: 4px solid var(--accent-success);
    background: linear-gradient(90deg, rgba(16, 185, 129, 0.1) 0%, var(--bg-elevated) 10%);
}

.toast-error {
    border-left: 4px solid var(--accent-danger);
    background: linear-gradient(90deg, rgba(239, 68, 68, 0.1) 0%, var(--bg-elevated) 10%);
}

.toast-warning {
    border-left: 4px solid var(--accent-warning);
    background: linear-gradient(90deg, rgba(245, 158, 11, 0.1) 0%, var(--bg-elevated) 10%);
}

.toast-info {
    border-left: 4px solid var(--accent-primary);
    background: linear-gradient(90deg, rgba(0, 212, 255, 0.1) 0%, var(--bg-elevated) 10%);
}

.toast-transaction {
    border-left: 4px solid var(--accent-secondary);
    background: linear-gradient(90deg, rgba(124, 58, 237, 0.1) 0%, var(--bg-elevated) 10%);
}

/* ========== RESPONSIVE DESIGN - MOBILE FIRST ========== */

@media (max-width: 768px) {
    /* Mobile Menu */
    .mobile-menu-toggle {
        display: flex;
    }
    
    .header-top {
        flex-wrap: wrap;
        min-height: auto;
    }
    
    .header-info {
        flex-direction: column;
        width: 100%;
        gap: var(--spacing-sm);
    }

    .network-status,
    .wallet-short {
        width: 100%;
        justify-content: center;
    }

    .header-contact {
        width: 100%;
        justify-content: center;
    }

    .email-text {
        font-size: var(--font-xs);
    }

    .login-btn {
        padding: 10px 20px;
        font-size: 13px;
        letter-spacing: 0.5px;
    }

    .login-text {
        display: none;
    }

    .login-icon {
        width: 24px;
        height: 24px;
    }

    .login-btn:hover::after {
        width: 200px;
        height: 200px;
    }
    
    .main-nav {
        flex-direction: column;
        display: none;
    }
    
    .main-nav.mobile-open {
        display: flex;
    }
    
    .nav-tab {
        justify-content: flex-start;
        padding: var(--spacing-lg);
        border-bottom: 1px solid var(--border-primary);
        min-height: 60px;
    }
    
    /* Typography adjustments */
    .hero-title {
        font-size: var(--font-4xl); /* 48px on mobile */
    }
    
    .hero-subtitle {
        font-size: var(--font-lg); /* 18px on mobile */
    }
    
    .section-title {
        font-size: var(--font-2xl); /* 24px */
    }
    
    .section-title .icon {
        font-size: 28px;
    }
    
    /* Spacing adjustments */
    .main-content {
        padding: var(--spacing-2xl) 0;
    }
    
    .hero-section {
