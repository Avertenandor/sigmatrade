    background: rgba(16, 185, 129, 0.05);
}

.footer-widget[data-highlight="true"]:hover {
    border-color: var(--accent-success);
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.2);
}

.footer-widget-icon-container {
    font-size: var(--font-3xl);
    min-width: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.footer-widget-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.footer-widget-name {
    font-size: var(--font-base);
    font-weight: 600;
    color: var(--text-primary);
}

.footer-widget-subtitle {
    font-size: var(--font-sm);
    color: var(--text-secondary);
}

.footer-widget-status {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: var(--font-xs);
    font-weight: 700;
    white-space: nowrap;
}

.footer-widget-status.status-active {
    background: rgba(16, 185, 129, 0.15);
    color: var(--accent-success);
}

.footer-widget-status.status-soon {
    background: rgba(245, 158, 11, 0.15);
    color: var(--accent-warning);
}

.footer-widget-status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: currentColor;
    animation: pulse 2s ease-in-out infinite;
}

.footer-widget-badge {
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    background: rgba(0, 212, 255, 0.15);
    color: var(--accent-primary);
    font-size: var(--font-xs);
    font-weight: 700;
    white-space: nowrap;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

/* Mobile responsiveness for footer widgets */
@media (max-width: 768px) {
    .footer-widgets {
        grid-template-columns: 1fr;
        gap: var(--spacing-lg);
        padding: var(--spacing-xl) 0;
    }

    .footer-widget {
        padding: var(--spacing-sm);
    }

    .footer-widget-icon-container {
        font-size: var(--font-2xl);
        min-width: 40px;
    }

    .footer-widget-name {
        font-size: var(--font-sm);
    }

    .footer-widget-subtitle {
        font-size: var(--font-xs);
    }
}

/* ========== MINDMAP PAGES ========== */
.mindmap-section {
    min-height: 60vh;
    padding: 60px 20px;
    background: linear-gradient(135deg, #0f0f1e 0%, #1a1a2e 100%);
}

.mindmap-placeholder {
    max-width: 900px;
    margin: 0 auto;
    padding: 80px 40px;
    text-align: center;
    background: rgba(255, 255, 255, 0.03);
    border: 2px dashed rgba(0, 212, 255, 0.3);
    border-radius: 16px;
}

.mindmap-placeholder p {
    font-size: 24px;
    color: #00d4ff;
    margin-bottom: 20px;
}

.mindmap-description {
    font-size: 16px !important;
    color: rgba(255, 255, 255, 0.6) !important;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto !important;
}

@media (max-width: 768px) {
    .mindmap-placeholder {
        padding: 40px 20px;
    }

    .mindmap-placeholder p {
        font-size: 18px;
    }
}