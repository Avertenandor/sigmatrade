/* ========== MIND MAP STYLES ========== */
.mindmap-controls {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
}

.mindmap-btn {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-base);
    font-weight: 600;
    min-height: 44px;
}

.mindmap-btn:hover {
    background: var(--bg-tertiary);
    border-color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.mindmap-btn:active {
    transform: translateY(0);
}

.mindmap-container {
    position: relative;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    min-height: 700px;
    box-shadow: var(--shadow-xl);
    margin-bottom: var(--spacing-xl);
}

.mindmap-svg {
    width: 100%;
    height: 700px;
    display: block;
    cursor: grab;
    user-select: none;
}

.mindmap-svg:active {
    cursor: grabbing;
}

/* Mind map nodes - Premium animations */
.mindmap-node {
    /* SVG transform is handled by JS via setAttribute */
    /* No CSS transitions on the node itself, only on child elements */
}

.mindmap-node.hovered .node-circle {
    stroke-width: 5 !important;
    filter: drop-shadow(0 0 20px currentColor) !important;
    transform: scale(1.05);
}

.mindmap-node.hovered .node-description {
    opacity: 1 !important;
}

.mindmap-node.hovered .node-label {
    transform: translateY(-2px);
}

.mindmap-node.dragging {
    cursor: grabbing !important;
    opacity: 0.85;
}

.mindmap-node.dragging .node-circle {
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.5)) !important;
}

.mindmap-node.clicked .node-circle {
    animation: nodeClickPulse 0.3s ease-out;
}

@keyframes nodeClickPulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.15);
    }
    100% {
        transform: scale(1);
    }
}

.node-circle {
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    stroke-width: 3;
    will-change: transform, stroke-width, filter;
}

.node-icon {
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform;
}

.mindmap-node.hovered .node-icon {
    transform: scale(1.1) rotate(5deg);
}

.node-label {
    fill: #fff;
    font-weight: bold;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.9);
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform;
}

.node-description {
    fill: #aaa;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: opacity, transform;
}

/* Mind map links - Premium animations */
.mindmap-link {
    stroke: rgba(100, 100, 100, 0.3);
    stroke-width: 2;
    fill: none;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: stroke-opacity, stroke-width;
}

.mindmap-link.highlighted {
    stroke: rgba(74, 158, 255, 0.8) !important;
    stroke-width: 3 !important;
